#include <stdio.h>
#include <unistd.h>  
#include <sys/types.h> 

int main() {
    pid_t pid;
    pid = fork();

    if (pid < 0) {
        perror("Fork failed");
        return 1;
    } else if (pid == 0) {
        printf("Child process:\n");
        printf("Process ID (PID): %d\n", getpid());
        printf("Parent Process ID (PPID): %d\n", getppid());
    } else {       
        printf("Parent process:\n");
        printf("Process ID (PID): %d\n", getpid());
        printf("Child Process ID: %d\n", pid);
    }

    return 0;
}

